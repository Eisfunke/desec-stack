######
# Pass API requests to an API server
######
location /api/ {
    ${PROD_ONLY} limit_req zone=perip-api;

    expires epoch;
    etag off;
    add_header Strict-Transport-Security "max-age=31536000; includeSubdomains; preload" always;
    include uwsgi_params;
    uwsgi_pass desecapi;

    location /api/v1/serials/ {
        gzip on;
        gzip_types *;
        uwsgi_pass desecapi;
    }
}
